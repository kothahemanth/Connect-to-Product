<mvc:View
	controllerName="sap.ui.core.tutorial.odatav4.controller.App"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Shell>
		<App busy="{appView>/busy}" class="sapUiSizeCompact">
			<pages>
				<Page title="{i18n>peoplePageTitle}">
					<content>
						<Table
							id="productList" items="{/Product}"
							>

							<headerToolbar>
								<OverflowToolbar>
									<content>
										<ToolbarSpacer/>
										
										</content>
								</OverflowToolbar>
							</headerToolbar>
							
							<columns>
								<Column id="userNameColumn">
									<Text text="product ID"/>
								</Column>
								<Column id="firstNameColumn">
									<Text text="product name"/>
								</Column>
								<Column id="middleNameColumn">
									<Text text="product Image"/>
								</Column>
								<Column id="lastNameColumn">
									<Text text="costPrice"/>
								</Column>
								<Column id="ageColumn">
									<Text text="sellPrice"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<ObjectIdentifier title="{product_id}"/>
										<Text text="{product_name}"/>
										<Image src="{product_img}" />
										<ObjectNumber number = "{product_cost}" />
										<ObjectNumber number = "{product_sell}" />
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>